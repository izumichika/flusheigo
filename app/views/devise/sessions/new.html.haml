.body
  .body__login
    .body__login__title
      %h2 ログイン
    .body__login__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .body__login__form__field
          = f.label :email, "メールアドレス"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email",style: "width:300px; height:50px;"
        .body__login__form__field
          = f.label :password, "パスワード"
          %br/
          = f.password_field :password, autocomplete: "current-password",style: "width:300px; height:50px;"
        - if devise_mapping.rememberable?
          .body__login__form__field
            = f.check_box :remember_me
            = f.label :remember_me
        .body__login__form__actions
          = f.submit "ログイン", class: 'button'
        .body__login__form__toppage
          = link_to "/" do
            %h2 トップページへ
    -# = render "devise/shared/links"

.footer



